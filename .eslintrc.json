{
  "env": {
    "node": true,
    "es2020": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"]
  },
  "ignorePatterns": ["dist", "node_modules", "drizzle"]
}
